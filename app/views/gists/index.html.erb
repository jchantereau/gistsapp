<h1>Gists Index</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= link_to "Add new gist", new_gist_path %>
      <br>
      Categories:
      <% @gists.each do |gist| %>
        <%= gist.category.name %>
      <% end %>
      <% @gists.each do |gist| %>
        <h2><%= link_to gist.name, gist_path(gist) %></h2>
        <p><%= gist.content %></p>
      <% end %>
      <%= link_to "Add new gist", new_gist_path %>
    </div>
  </div>
</div>
